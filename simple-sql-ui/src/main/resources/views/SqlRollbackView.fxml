<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.lingyuan.simplesql.ui.controller.SqlRollbackViewController"
            prefHeight="650.0" prefWidth="600.0">
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>

            <!-- 页面功能描述 -->
            <HBox alignment="CENTER" style="-fx-background-color: #f0f8ff; -fx-padding: 15;">
                <Label text="🛡️ ↩️ 回退SQL脚本生成" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
            
            <!-- 功能说明 -->
            <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                <Label text="功能说明:" style="-fx-font-weight: bold;"/>
                <Label text="• 仅支持解析 INSERT 语句，生成对应的 DELETE 回退语句"/>
                <Label text="• 对于 UPDATE / DELETE 语句，因需要提供原数据，建议使用ExcelToSQL功能"/>
                <Label text="• 查询原数据 → 使用 ExcelToSQL 生成对应的 UPDATE / INSERT 语句"/>
                <Label text="• 其他语句类型会被自动忽略"/>
            </VBox>
            
            <!-- 文件上传 -->
            <HBox spacing="20">
                <Button text="选择SQL文件" fx:id="selectFileBtn"/>
            </HBox>
            
            <!-- 文件位置展示 -->
            <HBox spacing="20">
                <Label fx:id="fileInfoLabel" text="未选择文件"/>
            </HBox>
            
            <!-- 生成按钮 -->
            <HBox spacing="10">
                <Button text="生成回退脚本" fx:id="generateBtn" disable="true"/>
            </HBox>
            
            <!-- 输出位置展示 -->
            <HBox spacing="10">
                <Label fx:id="outputPathLabel" text="未生成"/>
            </HBox>
            
            <!-- 操作按钮 -->
            <HBox spacing="20">
                <Button text="打开所在文件夹" fx:id="openFolderBtn" disable="true"/>
                <Button text="打开文件" fx:id="openFileBtn" disable="true"/>
            </HBox>
            
        </VBox>
    </center>
</BorderPane> 